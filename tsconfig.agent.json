
{
  "extends": "./tsconfig.base.json",
  "include": [
    "gpt5-agent-package/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "gpt5-agent-package/dist",
    "rootDir": "gpt5-agent-package/src",
    "isolatedModules": true,
    "types": ["node"]
  }
}
