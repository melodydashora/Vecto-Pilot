# ===============================
# Vecto Pilot â€” Background Worker Mode
# For Scheduled/Reserved VM deployments (PostgreSQL LISTEN/NOTIFY)
# ===============================
# IMPORTANT: This mode does NOT bind HTTP ports
# It only processes database queue events via LISTEN/NOTIFY
# ===============================

# -------------------------------
# Deployment Mode
# -------------------------------
APP_MODE=worker
NODE_ENV=production

# -------------------------------
# Background Worker Control
# -------------------------------
# Enable background worker for strategy generation
ENABLE_BACKGROUND_WORKER=true

# LISTEN mode: use PostgreSQL LISTEN/NOTIFY instead of HTTP polling
USE_LISTEN_MODE=true

# -------------------------------
# Worker Configuration
# -------------------------------
# Worker doesn't need HTTP ports (no gateway, no agent server)
# It subscribes to PostgreSQL NOTIFY events only

# -------------------------------
# Bootstrap Testing
# -------------------------------
# Seed a test job on boot if queue is empty (useful for testing worker startup)
SEED_JOB_ON_BOOT=false
