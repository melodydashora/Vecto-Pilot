# EditorConfig - Cross-Editor Consistency
# https://editorconfig.org
#
# This file ensures consistent coding styles across different editors and IDEs.
# Most modern editors support EditorConfig natively or via plugins.

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON, CSS files
[*.{js,mjs,cjs,jsx,ts,tsx,json,css,scss,html}]
indent_style = space
indent_size = 2

# Markdown files - preserve trailing whitespace (used for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# SQL migration files
[*.sql]
indent_style = space
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

# Package manager lockfiles
[{package-lock.json,pnpm-lock.yaml,yarn.lock}]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = true
