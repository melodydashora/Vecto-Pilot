entrypoint = "gateway-server.js"
modules = ["nodejs-22", "postgresql-16", "python-3.11"]
run = "sh -c 'export $(cat mono-mode.env | xargs) && node gateway-server.js'"
[nix]
packages = ["nodejs-22", "lsof"]
channel = "stable-25_05"

[deployment]
build = ["sh", "-c", "npm ci --omit=dev && npm run build"]
run = ["sh", "-c", "export $(cat mono-mode.env | xargs) && node gateway-server.js"]

[[ports]]
localPort = 80
externalPort = 3002

[[ports]]
localPort = 3101
externalPort = 3003
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5173

[[ports]]
localPort = 5174
externalPort = 80

[workflows]
runButton = "Run App"

[[workflows.workflow]]
name = "Run App"
mode = "sequential"
author = 43532959

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "set -a && source mono-mode.env && set +a && node gateway-server.js"
