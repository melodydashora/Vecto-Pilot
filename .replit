# Entrypoint and runtime modules
entrypoint = "gateway-server.js"
modules = ["python-3.11", "nodejs-20", "postgresql-16"]

# Primary run command (Run button / default start)
# Source env safely so comments/quotes are handled correctly
run = "sh -c \"set -a && . ./mono-mode.env && set +a && node scripts/start-replit.js\""

# Nix/packages configuration
[nix]
packages = ["at", "imagemagick_light", "jq", "lsof", "nodejs-22", "spidermonkey_91", "tree"]
channel = "stable-25_05"

# Deployment settings (CI-like build/start)
[deployment]
build = ["sh", "-c", "npm ci --omit=dev && npm run build:client"]
run = ["sh", "-c", "DEPLOY_MODE=webservice node gateway-server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

# Workflows
[workflows]
runButton = "Run App"

[[workflows.workflow]]
name = "Run App"
mode = "sequential"
author = 43532959

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "set -a && . mono-mode.env && set +a && npm run start:replit"

[agent]
integrations = ["perplexity_v0:1.0.0"]

[userenv]

[userenv.shared]
STRATEGY_STRATEGIST = "claude-sonnet-4-5-20250929"
STRATEGY_BRIEFER = "sonar-pro"
STRATEGY_CONSOLIDATOR = "gpt-5.1-reasoning-medium"
GEMINI_MODEL = "gemini-2.5-pro"
STRATEGY_CONSOLIDATOR_MAX_TOKENS = "64000"
STRATEGY_CONSOLIDATOR_REASONING_EFFORT = "medium"
