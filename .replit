entrypoint = "gateway-server.js"
modules = ["nodejs-22", "postgresql-16"]

run = "npm run dev"

[nix]
packages = ["nodejs-22", "lsof"]
channel = "stable-25_05"

[deployment]
build = ["sh", "-c", "npm ci --omit=dev && npm run build"]
run = ["sh", "-c", "PORT=${PORT} npm start"]

[[ports]]
localPort = 80
externalPort = 3002

[[ports]]
localPort = 3101
externalPort = 3003
exposeLocalhost = true

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 24678
externalPort = 3000

[[ports]]
localPort = 24700
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 43717
externalPort = 3001
exposeLocalhost = true
