# Entrypoint and runtime modules
entrypoint = "gateway-server.js"
modules = ["python-3.11", "nodejs-20", "postgresql-16"]

# Primary run command (Run button / default start)
# Source env safely so comments/quotes are handled correctly
run = "sh -c \"set -a && . ./mono-mode.env && set +a && node scripts/start-replit.js\""

# Nix/packages configuration
[nix]
packages = ["alsa-lib", "at", "at-spi2-atk", "at-spi2-core", "atk", "cairo", "cups", "dbus", "glib", "imagemagick_light", "jq", "libxcb", "libxkbcommon", "lsof", "mailutils", "mesa", "nodejs-22", "nspr", "nss", "pango", "pgroll", "spidermonkey_91", "tree", "unpackerr", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr"]
channel = "stable-25_05"

# Deployment settings (CI-like build/start)
[deployment]
build = ["sh", "-c", "npm ci --omit=dev && npm run build:client"]
run = ["sh", "-c", "DEPLOY_MODE=webservice node gateway-server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 24282

[[ports]]
localPort = 62789
externalPort = 3000

# Workflows
[workflows]
runButton = "Run App"

[[workflows.workflow]]
name = "Run App"
mode = "sequential"
author = 43532959

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "set -a && . mono-mode.env && set +a && npm run start:replit"

