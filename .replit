entrypoint = "gateway-server.js"
modules = ["nodejs-22"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

# Single task: run the gateway. It will bind to Replit's $PORT automatically.
[[workflows.workflow.tasks]]
task = "shell.exec"
# Internal services stay on localhost; only the gateway listens on $PORT.
args = "NODE_ENV=development EIDOLON_PORT=3101 AGENT_PORT=43717 node gateway-server.js"

[nix]
packages = ["nodejs-22"]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run build && npm run start"]

# Optional (kept from your config if you need it)
onBoot = "bash server/scripts/workspace-startup.sh"


